{
  "extends": ["plugin:github/recommended", "eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": ["jest", "@typescript-eslint"],
  "rules": {
    "import/no-namespace": "off",
    "eslint-comments/no-use": "off",
    "i18n-text/no-en": "off",
    "camelcase": "off"
  },
  "env": {
    "jest/globals": true
  },
  "ignorePatterns": [
    "lib",
    "dist",
    "coverage",
    "node_modules",
    "__tests__",
    "__mocks__",
    "**/*.js"
  ]
}
