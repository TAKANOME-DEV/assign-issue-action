{
  "name": "assign-to-me-action",
  "version": "1.0.2",
  "description": "Assign to me action",
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --license licenses.txt",
    "test": "jest --coverage",
    "all": "npm run format && npm run lint && npm run build && npm run package && npm test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TAKANOME-DEV/assign-to-me-action.git"
  },
  "keywords": [
    "github",
    "actions",
    "assign",
    "slash-assign",
    "assign-to-me",
    "slash-commands",
    "github-actions"
  ],
  "author": "TAKANOME-DEV",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.8.2",
    "@actions/github": "^5.0.3",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@types/jest": "^27.5.1",
    "@types/js-yaml": "^4.0.5",
    "@types/mustache": "^4.1.2",
    "@types/node": "^17.0.35",
    "@typescript-eslint/parser": "^5.26.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "8.17.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^26.2.2",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "13.0.2",
    "prettier": "2.7.1",
    "ts-jest": "28.0.5",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.ts": "prettier --write"
  }
}
