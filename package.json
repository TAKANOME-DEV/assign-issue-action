{
  "name": "assign-to-me-action",
  "version": "1.0.0",
  "description": "Assign to me action",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --coverage",
    "all": "npm run format && npm run lint && npm run build && npm run package && npm test",
    "prepare": "husky install"
  },
  "keywords": [
    "github",
    "actions",
    "assign",
    "slash-assign",
    "assign-to-me"
  ],
  "author": "TAKANOME-DEV",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.8.2",
    "@actions/github": "^5.0.3",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-typescript": "^7.17.12",
    "@types/jest": "^27.5.1",
    "@types/js-yaml": "^4.0.5",
    "@types/mustache": "^4.1.2",
    "@types/node": "^17.0.35",
    "@typescript-eslint/parser": "^5.25.0",
    "@vercel/ncc": "^0.33.4",
    "eslint": "^8.16.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^26.2.2",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "12.4.2",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.ts": "prettier --write"
  }
}
